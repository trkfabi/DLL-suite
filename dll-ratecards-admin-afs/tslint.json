{
	"extends": ["tslint-angular", "tslint:latest", "tslint-eslint-rules", "tslint-config-prettier"],
	"rules": {
		"ordered-imports": {
			"severity": "error"
		},
		"object-literal-sort-keys": false,
		"no-unused-expression": [true, "allow-fast-null-checks"],
		"jsdoc-format": {
			"severity": "error"
		},
		"no-console": false,
		"no-empty": [true, "allow-empty-functions"],
		"no-inferrable-types": [true, "ignore-params", "ignore-properties"],
		"variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
		"no-input-rename": false,
		"no-output-rename": false,
		"no-submodule-imports": [
			true,
			"rxjs",
			"@angular/platform-browser",
			"@angular/core/testing",
			"@angular/common/http",
			"@angular/platform-browser-dynamic/testing",
			"@angular/router/testing",
			"@angular/localize",
			"zone.js/dist/zone",
			"core-js/es6/symbol",
			"core-js/es6/object",
			"core-js/es6/function",
			"core-js/es6/parse-int",
			"core-js/es6/parse-float",
			"core-js/es6/number",
			"core-js/es6/math",
			"core-js/es6/string",
			"core-js/es6/date",
			"core-js/es6/array",
			"core-js/es6/regexp",
			"core-js/es6/map",
			"core-js/es6/weak-map",
			"core-js/es6/set",
			"core-js/es7/reflect",
			"zone.js/dist/zone-testing",
			"@core",
			"@afs",
			"@othc",
			"@shared",
			"@lib"
		],
		"no-implicit-dependencies": [
			true,
			["dev", "@shared", "@core", "@afs", "@othc", "@lib", "@layout", "@angular/material", "protractor"]
		],
		"no-this-assignment": [true, { "allowed-names": ["^self$"], "allow-destructuring": true }],
		"member-ordering": [
			false,
			{
				"severity": "error",
				"order": "fields-first"
			}
		]
	}
}
